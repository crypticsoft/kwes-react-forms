{
    "id": "remoteWorkSurvey",
    "title": "Remote Work Survey",
    "fields": [
        {
            "group": [
                {
                    "size": 6,
                    "field": {
                        "type": "radio",
                        "name": "q2",
                        "label": "Do you prefer remote work over hybrid or commuting into the office?",
                        "options": {
                        "yes": "Yes",
                        "no": "No"
                        },
                        "rules": "required"
                    }
                },
                {
                    "size": 6,
                    "field": {
                        "type": "select",
                        "name": "q3",
                        "label": "How often do you prefer to work remotely?",
                        "options": {
                        "always": "Always",
                        "sometimes": "Sometimes",
                        "rarely": "Rarely",
                        "never": "Never"
                        },
                        "rules": "required"
                    }
                }
            ]
        },
        {
            "group": [
                {
                    "size": 6,
                    "field": {
                        "type": "text",
                        "name": "q4_city",
                        "label": "Which city do you currently work from?",
                        "rules": "required",
                        "placeholder": "Enter the city"
                    }
                },
                {
                    "size": 6,
                    "field": {
                        "type": "text",
                        "name": "q5_state",
                        "label": "Which state or region do you currently work from?",
                        "rules": "required",
                        "placeholder": "Enter the state or region"
                    }
                }
            ]
        },    
        {
            "type": "textarea",
            "name": "q1",
            "label": "How has remote work impacted your work-life balance?",
            "rules": "required",
            "placeholder": "Please share your thoughts."
        }
    ],
    "disclaimer": "Your responses are completely anonymous, and your privacy is protected. We appreciate your honest feedback.",
    "submission": {
        "button": "Submit Survey"
    }
}
